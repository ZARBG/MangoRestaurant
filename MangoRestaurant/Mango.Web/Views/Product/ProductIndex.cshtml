@model IEnumerable<Mango.Web.Models.ProductDto>

<br /><br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-info">Products List</h1>
		</div>
		<div class="col text-end pt-2">
			<a asp-action="ProductCreate" class="btn btn-outline-info">
				<i class="fas fa-plus"></i>Create New Product</a>
		</div>
	</div>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Category Name</th>
			<th>Price</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.CategoryName</td>
				<td>@((item.Price).ToString("c"))</td>
				<td class="text-end"><a asp-action="ProductEdit" class="btn btn_success" asp-route-productId="@item.ProductId">
						<i class="fas fa-edit"></i>
					</a></td>
				<td><a asp-action="ProductDelete" class="btn btn_danger" asp-route-productId="@item.ProductId">
						<i class="fas fa-trash"></i>
					</a></td>
			</tr>
		}
	</tbody>
</table>
